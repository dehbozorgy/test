<Window x:Class="Git.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Git"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button VerticalAlignment="Center" HorizontalAlignment="Center" Content="Second Win"
                Cursor="Hand"
                Click="Button_Click"/>

        <Button VerticalAlignment="Center" HorizontalAlignment="Right" Content="Third Win"
                Cursor="Hand"
                Click="Button_Click_1"/>
    </Grid>
</Window>
